<h1><b>Query Admin - Modify Query</b></h1>

<%= form_for (@query), :url => {:action => 'modup', :method => :put}  do |f| %>
  <table>
    <tr><td>Title</td><td><%= f.text_field :title, :disabled => @disabled %></td></tr>
    <tr><td>Description</td><td><%= f.text_field :description, :disabled => @disabled %></td></tr>
    <tr><td valign='top'>Filter</td><td><%= f.text_field :filter, :disabled => @disabled %></td></tr>
    <tr><td valign='top'>Map Function</td><td><%= f.text_field :map, :as => :text, :disabled => @disabled %></td></tr>
    <tr><td valign='top'>Reduce Function</td><td><%= f.text_field :reduce, :as => :text, :disabled => @disabled %></td></tr>
    <tr><td> <%= f.submit 'Update Query' ,  {:controller => 'qryadmin', :action => 'modup', :method => :put}%> </td></tr>
  </table>

<% end %>

<table>
  <tr>
    <td><%= button_to 'Clone Query', {:action=>'clone', :id=>@query.id}, :method=>:post %></td>
    <td><%= button_to 'Delete Query', {:action=>'destroy', :id=>@query.id}, :method=>:delete %></td>
  </tr>
</table>