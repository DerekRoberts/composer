<%= simple_form_for @query do |f| %>
  <%= f.input :title, :label => 'Title', :disabled => @disabled %>
  <%= f.input :description, :label => 'Description', :disabled => @disabled %>
  <%= f.input :map, :label => 'Map Function', :disabled => @disabled %>
  <%= f.input :reduce, :label => 'Reduce Function', :disabled => @disabled %>
  <%= f.button :submit if !@disabled %>
<% end %>