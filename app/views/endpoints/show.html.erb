<%= render partial: 'shared/tab_menu', locals: { selected: {endpoints: true}}%>
 <div> 
  <%= render :partial=> "queries/sidebar" %>
</div>
<div id="mainPanel">
  <h1>Gateway Definition</h1>
  <p id="notice"><%= notice %></p>

  <table class="simpleTable">
    <div class="top_border form_top_border">
      <div class="top_border_lower form_border_lower">
      </div>
    </div>
    <tr>
      <th>Name</th>
      <td><%= @endpoint.name %></td>
    </tr>
    <tr>
      <th>URL</th>
      <td><pre><%= @endpoint.base_url %></pre></td>
    </tr>
  </table>

  <%= link_to 'Edit', edit_endpoint_path(@endpoint) %> <span class="sep">|</span>
  <%= link_to 'Back', endpoints_path %>
    <div class="bottom_border_lower relative">
      <div class="bottom_border">
      </div>
    </div>
</div>
